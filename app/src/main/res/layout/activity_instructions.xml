<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Instructions">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/instruction"
                android:layout_width="wrap_content"
                android:layout_height="850dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/howtoplayBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menuBtn2"
                app:srcCompat="@drawable/instructionsfull" />

            <ImageButton
                android:id="@+id/howtoplayBtn"
                android:layout_width="370dp"
                android:layout_height="75dp"
                android:backgroundTint="#00FFFFFF"
                android:rotationX="0"
                android:scaleType="centerCrop"
                android:translationX="10dp"
                android:translationY="-70dp"
                app:layout_constraintStart_toStartOf="@id/instruction"
                app:layout_constraintTop_toBottomOf="@+id/instruction"
                app:srcCompat="@drawable/howtoplay_btn" />


        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/menuBtn2"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/backmenu_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

